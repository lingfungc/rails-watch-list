<div class="list-body">

  <%= image_tag 'Cinema.jpg', class: 'list-banner' %>

  <div class="banner-headline">
    <h1>Here are the Greatest Movies of all time.</h1>
    <h3><span data-controller="typed-js"></span></h3>
  </div>

  <div class="container">

    <div class="list">
      <h3>My Lists</h3>
      <%= link_to "Create a new list", new_list_path, class: "btn btn-flat" %>
    </div>

    <div class="lists">
      <% @lists.reverse_each do |list| %>
        <%= link_to list_path(list), class:"text-decoration-none" do %>
          <% if list.photo.attached? %>
            <div class="list-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key %>);">
          <% else %>
            <div class="list-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('Cinema.jpg') %>);">
          <% end %>
            <%= list.name %>
          </div>
        <% end %>
      <% end %>
    </div>

  </div>

</div>
